datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model Artigo {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  titulo      String
  subtitulo   String
  conteudo    String
  dataPublic  DateTime     @default(now())
  tags        String[]
  slugs       String       @unique
  status      String
  autor       Autor?       @relation(fields: [autorId], references: [id])
  autorId     String       @db.ObjectId
  imagemCapa  ImagemCapa?
  comentarios Comentario[]
}

model Autor {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  artigos Artigo[]
}

model Comentario {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  autor    String
  conteudo String
  data     DateTime @default(now())
  artigo   Artigo   @relation(fields: [artigoId], references: [id])
  artigoId String   @db.ObjectId
}

type ImagemCapa {
  url String
  alt String
}
